<% if @website.display_banner? %>
  <section class="p-4 text-center">
    <div class="flex items-center py-2 px-8 leading-none lg:inline-flex <%= @light == true ? "bg-amber-100" : "bg-amber-800" %> <%= @light == true ? "text-amber-800" : "text-amber-100" %>">
      <span class="flex-auto font-semibold leading-loose text-sm">
        <%= @website.banner_text %>
      </span>
    </div>
  </section>
<% end %>