<!-- Blog posts -->
<section class="bg-white p-12">
  <div class="relative mx-auto max-w-5xl">
    <div class="text-center">
      <h2 class="text-4xl font-light tracking-tight text-gray-900">
        <%= title %>
      </h2>
      <p class="heading mt-4 text-lg tracking-tight text-gray-500">
        <%= sub_title %>
      </p>
    </div>
    <div class="mt-12 grid gap-16 pt-8 lg:grid-cols-2 lg:gap-x-16 lg:gap-y-16">
      <% @posts.each do |post| %>
        <div>
          <%= link_to(post_path(id: post.slug), class: "block divide-dashed divide-y-2 divide-gray-500/50") do %>
            <div class="flex flex-col space-y-2 text-sm text-gray-500 pb-6">
              <p class="heading text-xl font-light tracking-tight text-gray-900">
                <%= post.title %>
              </p>
              <time datetime="<%= post.created_at.strftime("%Y-%m-%d")%>">
                <%= post.created_at.strftime(" %A, %e %B %Y")%>
              </time>
            </div>
            <p class="pt-6 text-base text-gray-500">
              <%= post.content.to_plain_text.truncate(truncate_length) %>
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>