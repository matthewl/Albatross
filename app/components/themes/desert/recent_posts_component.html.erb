<!-- Blog posts -->
<section class="p-12 bg-white">
  <div class="relative max-w-5xl mx-auto">
    <div class="text-center">
      <%= render(Themes::Desert::TitleComponent.new(title: title, sub_title: sub_title)) %>
    </div>
    <div class="grid gap-16 pt-8 mt-12 lg:grid-cols-2 lg:gap-x-16 lg:gap-y-16">
      <% @posts.each do |post| %>
        <div>
          <%= link_to(post_path(id: post.slug), class: "block divide-dashed divide-y-2 divide-gray-500/50") do %>
            <div class="flex flex-col pb-6 space-y-2 text-sm text-gray-500">
              <p class="text-xl font-light tracking-tight text-gray-900 heading">
                <%= post.title %>
              </p>
              <time datetime="<%= post.created_at.strftime("%Y-%m-%d")%>">
                <%= post.created_at.strftime(" %A, %e %B %Y")%>
              </time>
            </div>
            <p class="pt-6 text-base text-gray-500">
              <%= post.content.to_plain_text.truncate(truncate_length) %>
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>