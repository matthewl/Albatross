<section class="w-full h-screen">
  <% if @header.background_image.attached? %>
    <%= image_tag @header.background_image, class: "object-cover h-screen w-full brightness-90" %>
  <% else %>
    <%= image_tag "sabrehill-header-background.jpg", class: "object-cover h-screen w-full brightness-90" %>
  <% end %>

  <div class="absolute top-0 inset-x-0">
    <%= banner %>
  </div>

  <div class="border absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 p-4 xl:px-0 w-3/4">
    <div class="px-8 py-4 mx-auto w-full text-center text-white">
      <p class="text-2xl tracking-tight">
        <%= @header.welcome %>
      </p>

      <h1 class="py-8 text-6xl font-light uppercase tracking-tight">
        <%= @header.title %>
      </h1>

      <p class="py-2 text-3xl tracking-tight">
        <%= @header.sub_title %>
      </p>
    </div>
  </div>
</section>