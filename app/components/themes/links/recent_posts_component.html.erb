<!-- Blog posts -->
<section class="bg-white p-12">
  <div class="relative mx-auto max-w-7xl divide-y-2 divide-gray-200 lg:max-w-7xl">
    <div>
      <h2 class="text-3xl font-bold tracking-tight text-gray-900">
        <%= title %>
      </h2>
      <p class="mt-3 text-xl text-gray-500">
        <%= sub_title %>
      </p>
    </div>
    <div class="mt-12 grid gap-16 pt-12 lg:grid-cols-3 lg:gap-x-5 lg:gap-y-16">
      <% @posts.each do |post| %>
        <div>
          <a href="#" class="block">
            <p class="text-xl font-semibold text-gray-900">
              <%= post.title %>
            </p>
            <p class="mt-3 text-base text-gray-500">
              <%= post.content.to_plain_text.truncate(truncate_length) %>
            </p>
          </a>
          <div class="mt-6 flex items-center">
            <div class="flex space-x-1 text-sm text-gray-500">
              <time datetime="<%= post.created_at.strftime("%Y-%m-%d")%>">
                <%= post.created_at.strftime(" %A, %e %B %Y")%>
              </time>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>