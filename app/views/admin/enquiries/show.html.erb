<% content_for(:title, "Enquiries") %>

<div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <%= render partial: "shared/section_title", locals: { title: "Enquiry", description: "" } %>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-4 space-y-2">
            <p class="block font-medium text-gray-600 mb-1">
              <strong><%= @enquiry.contact_name %></strong> is enquiring about <strong></strong>
            </p>
          </div>

          <div class="col-span-6 space-y-2">
            <p class="block font-medium text-gray-600 mb-1">
              Message
            </p>

            <div class="bg-gray-200 p-4 rounded leading-relaxed">
              <span class="leading-normal"><%= @enquiry.message %></span>
            </div>
          </div>

          <div class="col-span-6 space-y-2">
            <p class="block font-medium text-gray-600 mb-1">
              Contact
            </p>

            <% if @enquiry.contact_number.present? %>
              <p>
                <i class="far fa-fw fa-mobile-alt mr-1 fa-lg"></i>
                <%= @enquiry.contact_number %>
              </p>
            <% end %>

            <% if @enquiry.email.present? %>
              <p>
                <i class="far fa-fw fa-envelope-square mr-1 fa-lg"></i>
                <%= @enquiry.email %>
              </p>
            <% end %>
          </div>

          <div class="col-span-4 space-y-2">
            <p class="block font-medium text-gray-600 mb-1">
              Status
            </p>

            <p class="mb-3 text-gray-700">
              <% if @enquiry.open? %>
                This enquiry is <span class="text-green-700 font-bold">open</span>.
                <%= button_to(close_admin_enquiry_path(@enquiry), method: :put, class: "mt-3 bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-3 rounded", data: { turbo: false }) do %>
                  Mark enquiry as closed
                <% end %>
              <% else %>
                This enquiry is <span class="text-red-700 font-bold">closed</span>.

                <%= button_to(open_admin_enquiry_path(@enquiry), method: :put, class: "mt-3 bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-3 rounded", data: { turbo: false }) do %>
                  Mark enquiry as open
                <% end %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
