<% content_for(:title, "Posts") %>

<%= form_with(model: [:admin, @post], local: true, multipart: true, class: "space-y-8") do |form| %>
  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <%= render partial: "shared/section_title", locals: { title: t(".essentials.title"), description: t(".essentials.description") } %>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <%= render "shared/error_messages", resource: @post %>
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-4 space-y-2">
            <%= render(Admin::FormLabelComponent.new(form: form, attribute: :title)) %>
            <div class="mt-1">
              <%= form.text_field :title, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
            </div>
          </div>

          <div class="col-span-4 space-y-2">
            <%= render(Admin::FormLabelComponent.new(form: form, attribute: :status)) %>
            <div class="mt-1">
              <%= form.select :status, Post.statuses, {}, { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
            </div>
          </div>

          <div class="col-span-6 space-y-2">
            <%= render(Admin::FormLabelComponent.new(form: form, attribute: :content)) %>
            <div class="mt-1">
              <%= form.rich_text_area :content, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end">
    <%= form.submit t(".submit"), class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
