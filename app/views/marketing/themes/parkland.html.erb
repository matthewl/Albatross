<div class="space-y-12">
  <!-- Header image -->
  <div>
    <h1 class="text-2xl text-center font-bold mb-8">
      Header
    </h1>

    <section class="w-full h-2/3 relative">
      <%= render(Themes::Parkland::HeaderComponent.new(header: @website.headers.active_header)) %>
    </section>
  </div>

  <!-- Banner -->
  <div>
    <h1 class="text-2xl text-center font-bold mb-8">
      Banners
    </h1>

    <section class="text-center space-y-4">
      <%= render(Themes::Parkland::BannerComponent.new(website: @website, light: true)) %>
      <%= render(Themes::Parkland::BannerComponent.new(website: @website, light: false)) %>
    </section>
  </div>

  <!-- Recent Posts -->
  <div>
    <h1 class="text-2xl text-center font-bold mb-8">
      Recent posts
    </h1>

    <section>
      <%= render(Themes::Parkland::RecentPostsComponent.new(website: @website)) %>
    </section>
  </div>
</div>